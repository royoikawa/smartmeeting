<!--create project modal-->
<div id="modal_project" class="modal" >
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form method="post" action="/routes/index.js" class="form-group">
                <div class="modal-header"><h5 class="modal-title">建立專案</h5></div>
                <div class="modal-body">
                    <label class="col-form-label">專案名稱</label>
                    <input class="form-control" type="text" id="pro_name" name="pro_name" required>
                
                    <label class="col-form-label">專案密碼</label>
                    <input class="form-control" type="password" id="pro_pw" name="pro_pw" required>
                
                    <label class="col-form-label">請再次輸入密碼</label>
                    <input class="form-control" type="password" id="checkpw" required>
                    <div class="invalid-feedback" id='message'></div>
                </div>
                <div class="modal-footer">
                    <input type="button" value="取消" class="btn btn-secondary" data-dismiss="modal" onclick="document.getElementById('modal_project').style.display='none'">
                    <input type="submit" value="確認" id="btn" class="btn btn-primary">
                </div>
            </form>
        </div>
    </div>
</div>

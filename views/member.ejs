            <!--文檔音檔表格-->
            <% if (audioText.length == 0) { %>
              <p class="text-primary" style="margin-top: 2em;">沒有符合的項目</p>
            <% } else { %>
              <table class="table table-hover">
                <thead>
                  <tr>
                    <th scope="col">檔名</th>
                    <th scope="col">儲存時間</th>
                    <th scope="col"></th>
                  </tr>
                </thead>
                <tbody>
                  <% isEven = true; %><!--用來判斷 table 的顏色，從第0列開始算，true表偶數列(灰色)、false表奇數列(白色)-->
                  <% for(var i = 0; i < audioText.length; i++) { %>
                    <% name = audioText[i].at_name; %>
                    <% time = audioText[i].at_time; %>
                    <% if (name.substring(name.lastIndexOf('.')) == '.wav') { %>
                      <% eyeOrSound = 1; %><!--音檔顯示喇叭-->
                    <% } else { %>
                      <% eyeOrSound = 0; %><!--文檔顯示眼睛-->
                    <% } %>

                    <% if (isEven == true) { %>
                      <tr class="table-light">
                        <th scope="row"><%= name %></th>
                        <td><%= time %></td>
                        <% if (eyeOrSound == 0) { %>
                          <td><i class="fas fa-eye" style="font-size:1.1rem; color: #50565c; cursor: pointer;"></i></td>
                        <% } else if (eyeOrSound == 1) { %>
                          <td><i class="fas fa-volume-up" style="font-size:1.1rem; color: #50565c; cursor: pointer;"></i></td>
                        <% } %>
                      </tr>
                      <% isEven = false; %>
                    <% } else if (isEven == false) { %>
                      <tr>
                        <th scope="row"><%= name %></th>
                        <td><%= time %></td>
                        <% if (eyeOrSound == 0) { %>
                          <td><i class="fas fa-eye" style="font-size:1.1rem; color: #50565c; cursor: pointer;"></i></td>
                        <% } else if (eyeOrSound == 1) { %>
                          <td><i class="fas fa-volume-up" style="font-size:1.1rem; color: #50565c; cursor: pointer;"></i></td>
                        <% } %>
                      </tr>
                      <% isEven = true; %>
                    <% } %>
                  <% } %>
                </tbody>
              </table> 
            <% } %>


          </div>
        </div>
      </div>
    


    </div>
    
  </body>

  <script>
    /*checkbox*/
    $(document).ready(function(){
      
      /*checkbox是否呈現勾選*/
      if ('<%= cb[0] %>' == 'true') {
        $("#denyReview").attr("checked", "checked");
      } else if ('<%= cb[0] %>' == 'false') {
        $("#denyReview").removeAttr("checked");
      }
      if ('<%= cb[1] %>' == 'true') {
        $("#underReview").attr("checked", "checked");
      } else if ('<%= cb[1] %>' == 'false') {
        $("#underReview").removeAttr("checked");
      }
      if ('<%= cb[2] %>' == 'true') {
        $("#doneFile").attr("checked", "checked");
      } else if ('<%= cb[2] %>' == 'false') {
        $("#doneFile").removeAttr("checked");
      }
      
      /* if checkbox is changed */
      $('input[type=checkbox]').on('change', function(i) {
            var val = [];
      
            /* use each method to get all checkbox values into an object */
            $(':checkbox:checked').each(function(i) {
              if($(this).is(':checked')) {
                val[i] = $(this).val();
              }
            });
            
            /* Encode data string into JSON. */
            var jsonString = JSON.stringify({val});

            $("#filter").val(jsonString);
            $("#formfilter").submit();

      });
    });


